<selector xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/item">
    <!-- Non focused states -->
    <item android:drawable="@drawable/item_bg" android:state_focused="false" android:state_pressed="false" android:state_selected="false" />
    <item android:drawable="@drawable/item_bg_h" android:state_focused="false" android:state_pressed="false" android:state_selected="true" />

    <!-- Focused states -->
    <item android:drawable="@drawable/item_bg" android:state_focused="true" android:state_pressed="false" android:state_selected="false" />
    <item android:drawable="@drawable/item_bg_h" android:state_focused="true" android:state_pressed="false" android:state_selected="true" />

    <!-- Pressed -->
    <item android:drawable="@drawable/item_bg_h" android:state_pressed="true" />
</selector>
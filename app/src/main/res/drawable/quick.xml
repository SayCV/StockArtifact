<selector xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/index">
    <!-- Non focused states -->
    <item android:drawable="@drawable/ic_tab_quick_unselected" android:state_focused="false" android:state_pressed="false" android:state_selected="false" />
    <item android:drawable="@drawable/ic_tab_quick_selected" android:state_focused="false" android:state_pressed="false" android:state_selected="true" />

    <!-- Focused states -->
    <item android:drawable="@drawable/ic_tab_quick_unselected" android:state_focused="true" android:state_pressed="false" android:state_selected="false" />
    <item android:drawable="@drawable/ic_tab_quick_selected" android:state_focused="true" android:state_pressed="false" android:state_selected="true" />

    <!-- Pressed -->
    <item android:drawable="@drawable/ic_tab_quick_selected" android:state_pressed="true" />
</selector>